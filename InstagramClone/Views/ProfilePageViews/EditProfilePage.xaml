<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fontAwesome="clr-namespace:FontAwesome"
             x:Class="InstagramClone.Views.ProfilePageViews.EditProfilePage"
             Title="Edit your profile">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" Padding="20">
                
                <Label Text="Name"
                    TextColor="Black" 
                    FontSize="14"
                />
                <Entry x:Name="EntryName"
                    TextColor="Black"
                    FontAttributes="None"
                    FontSize="16"
                />

                <Label Text="Username" 
                    TextColor="Black" 
                    FontSize="16" 
                />

                <Entry x:Name="EntryUsername"
                    TextColor="Black"
                    FontAttributes="None"
                    FontSize="16"
                />

                <Label Text="Website" 
                    TextColor="Black" 
                    FontSize="16" 
                />

                <Entry x:Name="EntryWebsite"
                    TextColor="Black"
                    FontAttributes="None"
                    FontSize="16"
                />

                <Label Text="Bio" 
                TextColor="Black" 
                FontSize="16" 
                />

                <Editor x:Name="EntryBio"
                TextColor="Black"
                FontAttributes="None"
                FontSize="16"
                />

                <Label Text="Email address" 
                TextColor="Black" 
                FontSize="16" 
                />

                <Entry x:Name="EntryEmail"
                TextColor="Black"
                FontAttributes="None"
                FontSize="16"
                />

                <Label Text="Phone number" 
                TextColor="Black" 
                FontSize="16" 
                />

                <Entry x:Name="EntryPhone"
                TextColor="Black"
                FontAttributes="None"
                FontSize="16"
                />

                <Label Text="Gender" 
                TextColor="Black" 
                FontSize="16"
                />

                <Picker x:Name="GenderPicker"
                Title="Gender"
                FontSize="16"
                />

                <Label Text="Date of birth" 
                TextColor="Black" 
                FontSize="16" 
                />

                <DatePicker x:Name="PickerDOB" 
                        MinimumDate="01/01/2001"
                        MaximumDate="12/31/2030"
                        Date="01/01/2021" />       
                
                <Button x:Name="btnSave" Text="Save"
                        BackgroundColor="White" TextColor="Black"
                        BorderColor="Black" BorderWidth="1" CornerRadius="10"
                        Clicked="btnSave_Clicked">
                </Button>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>