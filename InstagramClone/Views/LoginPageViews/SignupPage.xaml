<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fontAwesome="clr-namespace:FontAwesome"
             x:Class="InstagramClone.Views.LoginPageViews.SignupPage">
    <ContentPage.Content>
        <Grid
            Padding="0,10,0,20"
            BackgroundColor="White">

            <Grid.RowDefinitions>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Text="Language: English"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Start"
                   Margin="0,5,0,0"
                   Grid.Row="0"/>
            <StackLayout 
                HeightRequest="50"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="Center"
                Grid.Row="2"
                Orientation="Horizontal"
                   >
                <Label Text="Already have account? "
                       VerticalTextAlignment="Center"
                       VerticalOptions="CenterAndExpand"/>
                <Label Text="Log in"
                       VerticalTextAlignment="Center"
                       VerticalOptions="CenterAndExpand"
                       TextColor="#2D88FF"
                       FontSize="Medium">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"
                                              NumberOfTapsRequired="1"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
            <Grid Grid.Row="1" 
                  Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Source="Instagram_logo.svg.png"
                       x:Name="LogoImage"
                       HeightRequest="65"
                       VerticalOptions="CenterAndExpand"
                       HorizontalOptions="CenterAndExpand"
                       Aspect="AspectFit"
                       Grid.Row="0"/>
                <Entry x:Name="TxtEmail"
                       Keyboard="Email"
                       BackgroundColor="White"
                       Placeholder="Phone number or email"
                       PlaceholderColor="DimGray"
                       Grid.Row="1"
                       />
                <Entry x:Name="TxtFullname"
                       Keyboard="Text"
                       BackgroundColor="White"
                       Placeholder="Full name"
                       PlaceholderColor="DimGray"
                       Grid.Row="2"
                       />
                <Entry x:Name="TxtUsername"
                       Keyboard="Text"
                       BackgroundColor="White"
                       Placeholder="Phone number, email or username"
                       PlaceholderColor="DimGray"
                       Grid.Row="3"
                       />
                <Entry x:Name="TxtPassword"
                       Keyboard="Text"
                       BackgroundColor="White"
                       IsPassword="True"
                       Placeholder="Password"
                       PlaceholderColor="DimGray"
                       Grid.Row="4"
                       />
                <Button x:Name="BtnSignUp"
                        BackgroundColor="#2D88FF"
                        Text="Sign up"
                        TextColor="White"
                        Clicked="BtnSignUp_Clicked"
                        Grid.Row="5"/>
                <Grid Grid.Row="6" Padding="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label BackgroundColor="Black" HeightRequest="1" HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                           Grid.Column="0"/>
                    <Label Text="OR" VerticalOptions="Center" HorizontalOptions="Center"
                           Grid.Column="1"/>
                    <Label BackgroundColor="Black" HeightRequest="1" HorizontalOptions="FillAndExpand" VerticalOptions="Center"
                           Grid.Column="2"/>
                </Grid>
                <StackLayout Grid.Row="7"
                             Orientation="Horizontal"
                             HorizontalOptions="Center">
                    <Label Text="{x:Static fontAwesome:FontAwesomeIcons.Facebook}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Start"
                           FontFamily="FFABrands"
                           FontSize="Large"
                           TextColor="#2D88FF"/>
                    <Label Text="Login with facebook" 
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Start"
                           FontSize="Medium"
                           TextColor="#2D88FF"
                           />
                </StackLayout>

            </Grid>

        </Grid>
    </ContentPage.Content>
</ContentPage>